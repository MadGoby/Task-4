{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "target": "ES2015",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "./node_modules",
    "./test/coverage"
  ],
  "include": ["src/**/*", "test/**/*"],
}